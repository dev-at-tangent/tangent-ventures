---
import Logo from "../assets/DarkLogo.svg";
import XIcon from "../assets/XIcon";
const { currentPath } = Astro.props;
---

<div
  class={`w-full bg-grey-90 px-8 py-6 gap-y-8 text-white flex flex-col items-center justify-center desktop:justify-between text-center desktop:flex-row  ${currentPath !== "" && "desktop:mt-16"}`}
  id="footer"
>
  <img src={Logo.src} class="h-8 sm:max-h-10" />
  <div class="grow hidden sm:flex"></div>
  <div class="flex w-1/2 desktop:w-fit justify-evenly items-center gap-x-16 mx-16">
    <a
      href="https://x.com/tangent_xyz"
      target="_blank"
      class="relative flex overflow-hidden py-2 group"
    >
      <span
        class="inline-block mx-4 translate-y-10 transition-all group-hover:translate-y-0"
      >
        <XIcon className="w-5" />
      </span>
      <span
        class="absolute left-0 mx-4 inline-block transition-all group-hover:-translate-y-10"
      >
        <XIcon className="w-5" />
      </span>
    </a>

    <a href="/legal" class={`relative inline-block overflow-hidden group py-2`}>
      <span
        class="inline-block mx-6 translate-y-10 transition-all group-hover:translate-y-0"
      >
        Legal
      </span>
      <span
        class="absolute left-0 mx-6 inline-block transition-all group-hover:-translate-y-10"
      >
        Legal
      </span>
    </a>
  </div>
  <div class="text-sm text-grey-20">Tangent 2024 | All Rights Reserved</div>
</div>
<script>
  setTimeout(() => {
    const footer = document.getElementById("footer");
    if (footer) {
      footer.style.display = "flex";
    }
  }, 1000);
</script>
