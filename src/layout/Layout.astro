---
import Navbar from "./Navbar";
import Footer from "./Footer.astro";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.replaceAll("/", "");
---

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#00aba9" />
    <meta name="theme-color" content="#ffffff" />
    <meta
      name="description"
      content="Tangent is a prop investment firm making founder-first and thesis-driven venture and liquid investments in crypto."
    />
    <title>Tangent</title>
    <!-- Google tag (gtag.js) -->
    <script
      async
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-836EZQN8J0"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-836EZQN8J0");
    </script>
  </head>
  <body
    class={`flex flex-col items-center font-inter overflow-x-hidden min-h-screen overscroll-y-none [&::-webkit-scrollbar]:hidden [-ms-overflow-style]:none [scrollbar-width]:none bg-grey-20 ${currentPath === "" && "bg-[url('/bg.webp')] bg-cover bg-center"}`}
  >
    <Navbar currentPath={currentPath} client:only="react" />
    <main
      class={`flex justify-center ${currentPath !== "" && "mt-12 sm:mt-20 px-6 max-w-[1400px] pb-16 desktop:pb-32"} `}
    >
      <slot />
    </main>
    <div class="grow"></div>
    <Footer currentPath={currentPath} />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer utilities {
    .rotate-y-180 {
      transform: rotateY(180deg);
    }
    .backface-hidden {
      backface-visibility: hidden;
    }

    .no-scrollbar::-webkit-scrollbar {
      width: 5px;
    }

    .no-scrollbar::-webkit-scrollbar-thumb {
      background-color: grey;
      border-radius: 10px;
    }
    .no-scrollbar::-webkit-scrollbar-track {
      background-color: rgb(226, 226, 226);
    }
  }
</style>
