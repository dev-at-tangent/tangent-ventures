---
import EndorsementContent from "../components/EndorsementContent";
import Layout from "../layout/Layout.astro";
import ScrambleText from "../components/ScrambleText";
---

<Layout>
  <div class="flex flex-col items-center">
    <div class="gap-y-6 text-center flex flex-col items-center">
      <span class="text-turq font-bold">ENDORSEMENTS</span>
      <ScrambleText
        finalText="DON'T TAKE OUR WORD FOR IT."
        className="text-5xl font-medium"
        client:only="react"
        duration={1}
      />
      <ScrambleText
        finalText="TAKE THEIRS"
        className="text-5xl font-medium"
        delay={1}
        client:only="react"
        duration={1}
      />
    </div>
    <EndorsementContent client:only="react" />
  </div>
</Layout>
